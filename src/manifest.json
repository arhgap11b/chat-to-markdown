{
  "name": "ChatGPT History Downloader",
  "version": "0.32",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": [
        "vendor/turndown.js",
        "vendor/turndown-plugin-gfm.js",
        "content.js"
      ],
      "run_at": "document_idle",
      "css": [
        "content.css"
      ]
    },
    {
      "matches": [
        "https://gemini.google.com/*"
      ],
      "js": [
        "vendor/turndown.js",
        "vendor/turndown-plugin-gfm.js",
        "content-gemini.js"
      ],
      "run_at": "document_idle",
      "css": [
        "content-gemini.css"
      ]
    }
  ],
  "permissions": [
    "scripting",
    "activeTab",
    "downloads"
  ],
  "action": {
    "default_icon": "./assets/icon.png"
  }
}
